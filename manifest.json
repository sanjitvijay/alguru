{
  "manifest_version": 3,
  "name": "Alguru",
  "description": "Alguru is a Chrome Extension chatbot that helps you get better at coding interviews.",
  "version": "1.0.2",
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/logo-small.png",
      "48": "assets/logo-small.png",
      "128": "assets/logo.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "storage"
  ]
}