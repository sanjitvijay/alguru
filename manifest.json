{
  "manifest_version": 3,
  "name": "LeetCodeAI",
  "description": "LeetCodeAI is a Chrome Extension chatbot that helps you get better at coding interviews.",
  "version": "1.0.0",
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/logo-small.png",
      "48": "assets/logo-small.png",
      "128": "assets/logo.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "world": "MAIN",
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "storage"
  ],
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self'"
  },
  "sandbox": {
    "pages": [
      "visualization.html"
    ]
  }
}